// Core (Main Style)
body.sm {
  .not-sm {
    display: none;
  }
}
body:not(.sm) {
  .only-sm {
    display: none;
  }
}

.center {
  text-align: center;
}

.warn {
  color: $brand;
  font-weight: 800;
}

.header {
  position: relative;
  color: #ffffff;
  background-image: url(../images/header.jpg);
  background-size: cover;
  background-position: center 20%;
  height: 70vh;
  min-height: 400px;

  &:before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
  }

  .content {
    position: absolute;
    width: 100%;
    height: 250px;
    top: 0;
    bottom: 0;
    margin: auto;

    @media $mq-xs {
      height: 350px;
    }
  }

  img.brand {
    width: 180px;
  }

  .lead {
    margin: 40px 0 8px;
    font-weight: 200;
    font-size: 36px;

    @media $mq-xs {
      margin: 0;
    }
  }

  .btn-set {
    margin-bottom: 10px;
    color: $brand;

    a {
      color: $brand;
    }

    .btn {
      margin-right: 12px;
    }
  }

  .languages {
    margin: 16px 0;

    & > * {
      margin-right: 8px;
    }

    a {
      color: #ffffff;
    }
  }
}

.feats {
  .lead {
    margin: 36px 0 10px;
    font-weight: 200;
    font-size: 28px;
  }

  img.feat-1 {
    height: 245px;
    border-radius: 2px;
    box-shadow: 0 6px 30px 1px rgba(133, 133, 133, 0.5);
    margin-top: 80px;

    @media $mq-md {
      height: 200px;
    }

    @media $mq-xs {
      margin-top: 0;
    }
  }
}

.footer {
  position: relative;
  margin-top: 36px;
  padding: 24px 0;

  &:before{
    content: "";
    width: 100%;
    height: 10px;
    position: absolute;
    top: -10px
    background-image: repeating-linear-gradient(
            40deg,
            $brand,
            $brand 10px,
            transparent 10px,
            transparent 38px,
            $brand 38px);
    background-size: 40px 40px;
  }

  .link {
    line-height: 36px;
  }

  .copyright {
    color: $light;
    font-size: 13px;

    a {
      color: inherit;
    }
  }
}

ul.share {
  list-style: none;
  margin: 0;
  padding: 0;

  & > li {
    display: inline-block;
    margin: 0 6px;
    height: 20px;
  }

  .facebook-like {
    .fb-like > span {
      vertical-align: initial !important;
    }
  }
}
