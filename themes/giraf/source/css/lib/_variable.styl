// Color Variables

$bg = #ebebeb; // Background color

$base = #444; // Base text color
$light = #999; // Light text color

$link = #4a73f0; // Link text color
$hover = darken($link,8%); // Link text color(hover)

$border = #ddd; // Border color

$brand = #e2c710;


// Media Queries - Breakpoints

$mq-lg = "(min-width: 1240px)"; // Media queries - Large display

$mq-md = "(max-width: 1024px)"; // Media Queries - Tablet

$mq-sm = "(max-width: 767px)"; // Media Queries - Small tablet & smartphone

//$mq-xs = "(max-width: 480px)"; // Media Queries - Smartphone
$mq-xs = "(max-width: 767px)";


// Media Queries - Retina display
$at2x = "(-webkit-min-device-pixel-ratio: 2),(min-resolution: 2dppx)"; // All retina devices

$at2x-tablet = "(-webkit-min-device-pixel-ratio: 2) and (min-device-width: 768px),(min-resolution: 2dppx) and (min-device-width: 768px)"; // Larger than iPad display

$at2x-pc = "(-webkit-min-device-pixel-ratio: 2) and (min-device-width: 1025px),(min-resolution: 2dppx) and (min-device-width: 1025px)"; // Larger than PC display (1025px)
